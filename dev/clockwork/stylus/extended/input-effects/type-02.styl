type-02()
  overflow hidden
  margin-top 0
  padding-top $input-margin

  .cog-input-field
    padding 0.85em 0
    color $input-color
  label
    position absolute
    bottom 0
    left 0
    height calc(100% - 0.5em)
    pointer-events none
    &:before, &:after
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height calc(100% - 10px)
      border-bottom 1px solid $input-color
    &:after
      margin-top 2px
      border-bottom 4px solid $input-color-accent
      transform translate3d(-100%, 0, 0)
      transition transform 0.3s
  textarea + label
    height calc(100% - 1.25em)

  .cog-input-field:focus + label, &.input--filled label
    font-size 0.8em
    &:after
      transform translate3d(0,0,0)
  .cog-input-field:focus + label span, &.input--filled span
    animation input-animation-01 0.3s forwards
