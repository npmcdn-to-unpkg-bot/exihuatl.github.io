.side-nav
  position fixed
  width $sidenav-width
  left -105%
  top 0
  margin 0
  height 100%
  height calc(100% + 60px)
  padding-bottom 60px
  background $sidenav-color
  z-index 999
  overflow-y  auto

  @extend .z-depth-1
  will-change left

  // Right Align
  &.right-aigned
    will-change right
    right -105%
    left auto

  .collapsible
    margin 0

  li
    float none
    padding 0
    a
      color $sidenav-text-color
      display block
      font-size inherit
      height $navbar-height-mobile
      line-height $navbar-height-mobile
      padding 0 $gutter-width
      &:hover, &.active
        background $sidenav-hover-bg
        color $sidenav-hover-text
      &:focus:not(:hover):not(.active)
        color $sidenav-hover-bg

// Touch interaction
.drag-target
  height 100%
  width 10px
  position fixed
  top 0
  z-index 998

// Hidden SideNav for all sizes
.side-nav.fixed
  a
    $sidenav-text-color
    display block
    padding 0 15px

// Fixed side-nav shown
.side-nav.fixed
  left 0
  position fixed

  // Right Align
  &.right-aligned
    right 0
    left auo

@media (max-width: $navbar-mobile-res)
  .side-nav.fixed
    left -105%
    &.right-aligned
      right -105%
      left auto

.side-nav .collapsible-body li.active,
.side-nav.fixed .collapsible-body li.active
  background $sidenav-color
  a
    color $sidenav-hover-text

#sidenav-overlay
  position fixed
  top 0
  left 0
  right 0
  height 120vh
  background-color rgba(0,0,0,.5)
  z-index 997
  will-change opacity
