type-03()
  width calc(100% - 2em)

  .cog-input-field
    opacity 0
    text-align center
    transition opacity 0.3s

  label
    position absolute
    pointer-events none
    span
      text-align center
    &:before, &:after
      content ''
      position absolute
      top 0
      left 0
      width 50%
      height 100%
      border 2px solid $input-color
      transition transform 0.3s
    &:before
      border-right none
    &:after
      left 50%
      border-left none


  .cog-input-field:focus, &.input--filled .cog-input-field
    opacity 1
    transition-delay 0.3s
    + label:before
      transform translate3d(-1em, 0, 0)
    + label:after
      transform translate3d(1em, 0, 0)
    + label span
      animation input-animation-02 0.3s forwards
