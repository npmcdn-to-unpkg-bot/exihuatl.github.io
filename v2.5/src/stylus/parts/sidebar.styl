/* Sidebar */
.sidebar
  text-align center
  background #f5f5f5
  z-index 1000
  position fixed
  width $sidebarWidth
  max-width 100%
  height 100vh
  min-height 320px
  top 0
  left -100%
  padding 2em 3em 5rem
  transition left $tDur ease-in-out
  color #333

.sidebar__address
  padding 5px
  font-style normal
  span, a
    display block
    text-align left
  span
    color #888
  a
    text-decoration none
    color #333
    margin-bottom 1rem
    &:hover
      color $blue

.portrait
  border 1px solid #ddd
  padding 0.5rem
  margin 0 auto
  display block
  width 100%
  max-width 20rem

.socials
  list-style none
  padding-left 0
  font-size 2rem
  display flex
  justify-content space-between
  a
    color #888
    padding 1rem
    transition all 0.25s ease-in-out
  .linkedin:hover
    color #1b85bd
  .facebook:hover
    color #3b5998
  .steam:hover
    color #171a21

.sidebar__socials
  position absolute
  bottom 0


@media (min-width 1024px)
  .sidebar
    left 0
