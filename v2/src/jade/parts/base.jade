doctype
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="description" content="Simple page about a random developer")
    meta(name="author" content="Patryk Sadza")
    meta(http-equiv="X-UA-Compatible" content="IE-edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Resume

    style.
      .preloader {
        position: fixed;
        z-index: 98;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background: white;
      }
      .preloader-inner {
        position: absolute;
        z-index: 99;
        height: 64px;
        width: 64px;
        top: 50%;
        left: 50%;
        margin-top: -32px;
        margin-left: -32px;
        background: url("./assets/images/preloader64.gif");
      }
    link(rel="stylesheet" type="text/css" href="./dist/style.css")
    link(rel="shortcut icon" href="./assets/images/favicon.ico")

  body
    .preloader
      .preloader-inner

    block body

    script(src="./dist/app.min.js")
