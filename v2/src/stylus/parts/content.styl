.content
  overflow hidden
  transition all 1s ease-in-out
  transform translateZ(0)
  position absolute
  top 0
  left 0
  width 100%
  height 100vh
  text-align center
  .gm-scroll-view
    width calc(100% + 20px) !important
  &.gm-scrollbar-container
    width @width
    height @height
.content-inner
  width 100%
  background-color white
  min-height 120vh
  padding 1.5rem

.content--home
  z-index 2
.content--about .content-inner
  background-color $violet
.content--resume .content-inner
  background-color $orange
.content--portfolio .content-inner
  background-color $green
.content--blog .content-inner
  background-color $blue
.content--contact .content-inner
  background-color $red


@media (min-width 1024px)
  .content,
  .content.gm-scrollbar-container
    left 25%
    width 50%

    &[data-position="left"],
    &.is-left
      left 0
    &[data-position="right"],
    &.is-right
      left 50%
