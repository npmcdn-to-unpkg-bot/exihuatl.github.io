/* Placeholder element (dummy that gets animated when we click on an item) */
.placeholder
  pointer-events none
  position absolute
  width calc(100% + 5px)
  height calc(100vh + 5px)
  z-index 100
  top 0
  left 0
  background #fff
  transform-origin 0 0

.placeholder.placeholder--trans-in
  transition transform 0.5s
  transition-timing-function cubic-bezier(0.165, 0.84, 0.44, 1)

.placeholder.placeholder--trans-out
  -webkit-transition -webkit-transform 0.5s
  transition transform 0.5s

/* main content */
.content
  position absolute
  top 0
  left 0
  width 100%
  pointer-events none
  height 0
  /* Avoid second scroll bar in Chrome! */
  visibility hidden
  z-index 400
  overflow hidden

.content.content--show
  height 100vh
  pointer-events auto
  visibility visible

/* scroll helper wrap */
.scroll-wrap
  position absolute
  width 100%
  height 100%
  left 0
  top 0
  z-index 1
  overflow-y scroll
  -webkit-overflow-scrolling touch


/* single content item */
.content__item
  position absolute
  top 0
  width 100%
  overflow hidden
  height 0
  opacity 0
  padding 5% 15%
  pointer-events none
  text-align center

.content__item.content__item--show
  height auto
  min-height 100vh
  opacity 1
  pointer-events auto
  transition opacity 0.6s

/* close button (for content and sidebar) */
.close-button
  position absolute
  top 0
  right 0
  opacity 0

.close-button span
  display none

.close-button:hover
  color #7b7b7b


/* show class for content close button */
.close-button--show
  opacity 1
  pointer-events auto




