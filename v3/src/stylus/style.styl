@import './variables';
@import './parts/content';
// @import './parts/grid';
// @import './parts/sidebar';
@import './parts/menu';


body
  width 100%
  min-height 150vh
  overflow-x hidden
  overflow-y scroll
body
  margin 0
  background-size cover
  background-attachment fixed
  font-size 15px
  color white
  font-family 'Roboto', sans-serif
  background #222
*
  box-sizing border-box
figure
  margin 0

.btn
  padding 15px

/* helper class when showing content */
.noscroll
  overflow hidden


.u-bg--violet
  background-color $violet
.u-bg--orange
  background-color $orange
.u-bg--green
  background-color $green
.u-bg--blue
  background-color $blue
.u-bg--red
  background-color $red
.u-bg--pink
  background-color $pink



h1
  font-weight 100
  font-size 45px
  position absolute
  top 35%
  left 0
  right 0
  text-align center

.toggleMenu
  background $orange
  border-radius 50%
  width 50px
  height 50px
  color white
  text-align center
  line-height 48px
  font-size 25px
  border none
  position absolute
  top 55%
  left 0
  right 0
  margin auto


.main
  position relative

/* Overlay */
.grid::after
  content ''
  background rgba(202, 202, 202, 0.4)
  opacity 0
  position absolute
  pointer-events none
  top 0
  left 0
  width 100%
  height 100%
  -webkit-transition opacity 0.5s
  transition opacity 0.5s

.view-single .grid::after
  opacity 1


.morph {
  width: 100%;
  transform: translate3d(0, 0, 0);
  will-change: left, top, height, width, transform;
  left: 0;
  top: 0;
  transition: all .3s ease;
  background: gray;
}
